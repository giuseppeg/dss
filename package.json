{
  "private": true,
  "version": "0.1.0-beta.0",
  "description": "Deterministic Style Sheets",
  "keywords": [],
  "author": "Giuseppe Gurgone",
  "license": "BSD-3-Clause",
  "workspaces": [
    "classnames",
    "compiler",
    "examples/cli",
    "examples/webpack*",
    "webpack",
    "website"
  ],
  "scripts": {
    "test": "xo && cd compiler && npm test",
    "lint": "xo",
    "format": "prettier --single-quote --trailing-comma=es5 --no-semi --write all {src,test,*}/**/*.js",
    "clean": "rm -rf node_modules **/node_modules **/**/node_modules **/dist **/**/dist website/.next website/out"
  },
  "devDependencies": {
    "lerna": "2.11.0",
    "prettier": "^1.11.1",
    "xo": "^0.20.3"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "extends": [
      "prettier"
    ],
    "ignores": [
      "compiler/src/vendor",
      "examples",
      "website"
    ],
    "rules": {
      "capitalized-comments": 0,
      "unicorn/import-index": 0
    },
    "globals": [
      "describe",
      "it",
      "expect"
    ]
  }
}
